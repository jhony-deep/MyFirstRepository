              <apex:inputField value="{!My_NGO_MAIN__c.Primary_Email__c}"/>
              <apex:inputField value="{!My_NGO_MAIN__c.Alternate_Email__c}"/>
              <apex:inputField value="{!My_NGO_MAIN__c.Primary_Country_Code__c}"/>
             <apex:inputField value="{!My_NGO_MAIN__c.Primary_Phone__c}"/>
             <apex:inputField value="{!My_NGO_MAIN__c.Alternate_Country_Codee__c}"/>
              <apex:inputField value="{!My_NGO_MAIN__c.Alternate_Phone__c   }"/>            
            <apex:inputField value="{!My_NGO_MAIN__c.Choose_Occupation__c}" />
                 <apex:inputField value="{!My_NGO_MAIN__c.DESIGNATION__c}"/>
             <apex:inputField value="{!My_NGO_MAIN__c.Description__c}" />
                  </apex:pageBlockSection>
        <apex:pageBlockSection showHeader="true" title="Personal Information" columns="3" collapsible="true">
              <apex:inputField value="{!My_NGO_MAIN__c.Birth_Date__c}" />
              <apex:inputField value="{!My_NGO_MAIN__c.Birth_Month__c}"/>
<apex:inputField value="{!My_NGO_MAIN__c.Birth_Year__c}"/>
            <apex:inputField value="{!My_NGO_MAIN__c.Wedding_Anniversary_Date__c}"/>
            <apex:inputField value="{!My_NGO_MAIN__c.Wedding_Anniversary_Month__c}"/>
