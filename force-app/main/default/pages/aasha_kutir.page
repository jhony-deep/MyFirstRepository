    <apex:sectionHeader title="Create Contact" subtitle="Create new" />
    <apex:pageBlock tabStyle="opportunity"> 
        <apex:pageBlockButtons location="bottom">
            <center><apex:commandButton value="CREATE" action="{!SAVE}" style="BACKGROUND:GREEN;COLOR:WHITE;WIDTH:150PX" /></center>
        </apex:pageBlockButtons>
        <apex:pageBlockSection showHeader="true" title="Information" columns="2">
              <apex:inputField value="{!My_NGO_MAIN__c.NAME__c}"/>
