              <apex:inputField value="{!My_NGO_MAIN__c.ADRESS_LINE_1__c}"/>
              <apex:inputField value="{!My_NGO_MAIN__c.ADDRESS_LINE_2__c}"/>
                       <apex:inputField value="{!My_NGO_MAIN__c.Land_Mark1__c}"/>
            <apex:inputField value="{!My_NGO_MAIN__c.Enter_your_City__c}"/>
            <apex:inputField value="{!My_NGO_MAIN__c.Enter_Your_State__c}"/>
                       <apex:inputField value="{!My_NGO_MAIN__c.Pincode__c}"/>
                   <apex:inputField value="{!My_NGO_MAIN__c.Country__c}"/> 
                 
                  </apex:pageBlockSection>
        </apex:pageBlock>
                 </DIV>
    </apex:form>
</apex:page>